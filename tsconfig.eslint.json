{
  "extends": "./.quasar/tsconfig.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    ".quasar/**/*.d.ts",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src-electron/**/*.d.ts",
    "src-electron/**/*.ts",
    "src-pwa/**/*.d.ts",
    "src-pwa/**/*.ts",
    "src-ssr/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "storybook-static",
    "src-capacitor",
    "src-cordova"
  ]
}
